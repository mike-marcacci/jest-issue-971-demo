{
  "ecmaFeatures": {
    "jsx": false,
    "modules": true
  },
  "env": {
    "browser": false,
    "node": true,
    "jest": true
  },
  "extends" : [
    "standard",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "rules": {
    "brace-style": [2, "stroustrup"],
    "comma-dangle": [1, "only-multiline"],
    "indent": [2, "tab", {"SwitchCase": 1}],
    "no-multiple-empty-lines": [1, {"max": 4}],
    "no-tabs": [0],
    "padded-blocks": [0],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "strict": [2, "never"]
  },
  "plugins": [
    "flowtype"
  ]
}
